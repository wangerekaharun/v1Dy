<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/newss"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:layout_height="150dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:textColor="@color/blacktext"
                    android:text="Google I/O Extended Eldoret"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="by GDG Moi University"
                    android:paddingTop="6dp"
                    android:paddingLeft="10dp"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="16dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_event_note_black_24dp"
                            android:backgroundTint="@color/line"
                            android:layout_height="20dp" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:paddingLeft="8dp"
                            android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:id="@+id/events_calendar"
                            android:text="Friday, May 26"
                            android:layout_height="wrap_content" />
                            <TextView
                                android:layout_width="match_parent"
                                android:paddingTop="3dp"
                                android:layout_below="@+id/events_calendar"
                                android:text="9:00 AM - 5:00 PM"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="16dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_location_on_black_24dp"
                            android:backgroundTint="@color/line"
                            android:layout_height="20dp" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:paddingLeft="8dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/events_location"
                                android:text="Moi Univerity"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_width="match_parent"
                                android:paddingTop="3dp"
                                android:layout_below="@+id/events_location"
                                android:text="The Senate Chambers,2nd Floor"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:paddingTop="16dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/ic_event_note_black_24dp"
                            android:backgroundTint="@color/line"
                            android:layout_height="20dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/events_ticket"
                                android:paddingLeft="8dp"
                                android:text="Free"
                                android:layout_height="wrap_content" />




                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingTop="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Event Description"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/event_desc"
                    android:paddingRight="4dp"
                    android:paddingLeft="4dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingTop="6dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Organiser"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/event_desc"
                    android:paddingRight="4dp"
                    android:paddingLeft="4dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="15sp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="18dp"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:paddingBottom="6dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="170dp"
                    android:background="@drawable/roundbluebg"
                    android:text="Tickets"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/share"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_share" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/calendar_save"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_height="wrap_content"

                    android:src="@drawable/ic_event_note_black_24dp" />

            </LinearLayout>



        </LinearLayout>
        </ScrollView>


    </android.support.v7.widget.CardView>

</LinearLayout>