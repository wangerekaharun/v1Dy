<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="6dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:paddingRight="6dp"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="3dp"
        android:elevation="3dp"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:paddingTop="6dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_status"
                    android:layout_width="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="Download"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_height="30dp"
                    android:background="@drawable/roundbluebg"

                  />


            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/assignement_linear"
                android:paddingRight="6dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="6dp"
                android:layout_toLeftOf="@+id/btn_status"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/list_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Unit Name"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_item_course_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Course"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/list_item_date"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@color/line"
                    android:background="@drawable/ic_date_range_black_24dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/list_item_by"
                    android:backgroundTint="@color/line"
                    android:background="@drawable/ic_account_circle_black_24dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:text="By"
                    android:textSize="12sp" />


            </LinearLayout>




            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>